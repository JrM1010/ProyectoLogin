@{
    ViewData["Title"] = "Listado de Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">📦 Compras Registradas</h3>
        <a href="@Url.Action("Create", "Compras")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nueva Compra
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>#</th>
                <th>Proveedor</th>
                <th>Fecha</th>
                <th>N° Documento</th>
                <th>Método de Pago</th>
                <th>Total (Q)</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="text-center">


            @if (Model != null && Model.Count > 0)
            {
                int i = 1;

                foreach (var compra in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@compra.Proveedor?.Nombre</td>
                        <td>@compra.FechaCompra.ToString("dd/MM/yyyy")</td>
                        <td>@compra.NumeroDocumento</td>
                        <td>@compra.MetodoPago</td>
                        <td>Q @compra.Total.ToString("N2")</td>
                        <td>
                            <span class="badge bg-success">@compra.Estado</span>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Compras", new { id = compra.IdCompra })"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-muted">No hay compras registradas aún.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
