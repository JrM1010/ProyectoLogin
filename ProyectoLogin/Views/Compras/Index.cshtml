@model IEnumerable<ProyectoLogin.Models.ModelosCompras.Compra>
<h2>Compras</h2>
<p><a class="btn btn-primary" href="@Url.Action("Create")">Nueva Compra</a></p>
<table class="table">
    <thead><tr><th>Codigo de Compra</th><th>Proveedor</th><th>Fecha</th><th>Total</th><th></th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.NumeroDocumento</td>
                <td>@(c.Proveedor?.Nombre ?? "-")</td>
                <td>@c.FechaCompra.ToString("dd/MM/yyyy")</td>
                <td>@c.Total.ToString("N2")</td>
                
            </tr>
        }
    </tbody>
</table>