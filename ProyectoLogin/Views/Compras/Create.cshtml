@{
    ViewData["Title"] = "Registrar Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h3 class="fw-bold text-primary mb-4">🧾 Registrar Nueva Compra</h3>

    <form asp-action="Create" method="post">
        <div class="row mb-3">
            <div class="col-md-4">
                <label>Proveedor:</label>
                <select name="IdProveedor" class="form-select" required>
                    <option value="">-- Seleccione --</option>
                    @foreach (var proveedor in ViewBag.Proveedores)
                    {
                        <option value="@proveedor.IdProveedor">@proveedor.Nombre</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label>Método de Pago:</label>
                <select name="MetodoPago" class="form-select">
                    <option value="Efectivo">Efectivo</option>
                    <option value="Tarjeta">Tarjeta</option>
                    <option value="Transferencia">Transferencia</option>
                </select>
            </div>
            <div class="col-md-4">
                <label>N° Documento:</label>
                <input type="text" name="NumeroDocumento" class="form-control" placeholder="Factura o Nota" />
            </div>
        </div>

        <hr />

        <h5 class="fw-bold mb-3">🛍 Productos Comprados</h5>

        <div class="table-responsive mb-3">
            <table id="tablaProductos" class="table table-bordered text-center align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>Producto</th>
                        <th>Unidad</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario (Q)</th>
                        <th>Subtotal (Q)</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody id="detalleBody">
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-outline-primary" onclick="agregarFila()">
                <i class="bi bi-plus-circle"></i> Agregar Producto
            </button>

            <div>
                <strong>Total:</strong>
                <input type="text" id="totalGeneral" name="Total" class="form-control d-inline-block text-end" style="width: 150px;" readonly />
            </div>
        </div>

        <hr />

        <div class="text-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> Guardar Compra
            </button>
            <a href="@Url.Action("Index", "Compras")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<script>
    let productos = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Productos));
    let unidades = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Unidades));

    function agregarFila() {
        const tbody = document.getElementById("detalleBody");
        const row = document.createElement("tr");

        row.innerHTML = `
            <td>
                <select class="form-select" name="detalles[${tbody.rows.length}].IdProducto" required>
                    <option value="">-- Seleccione --</option>
                    ${productos.map(p => `<option value="${p.idProducto}">${p.nombre}</option>`).join('')}
                </select>
            </td>
            <td>
                <select class="form-select" name="detalles[${tbody.rows.length}].IdUnidad" required>
                    ${unidades.map(u => `<option value="${u.idUnidad}">${u.nombre}</option>`).join('')}
                </select>
            </td>
            <td><input type="number" step="0.01" min="1" class="form-control" name="detalles[${tbody.rows.length}].Cantidad" onchange="calcularTotales()" required></td>
            <td><input type="number" step="0.01" min="0.01" class="form-control" name="detalles[${tbody.rows.length}].PrecioUnitario" onchange="calcularTotales()" required></td>
            <td><input type="text" class="form-control text-end" name="detalles[${tbody.rows.length}].Subtotal" readonly></td>
            <td><button type="button" class="btn btn-danger btn-sm" onclick="this.closest('tr').remove(); calcularTotales();"><i class="bi bi-trash"></i></button></td>
        `;

        tbody.appendChild(row);
    }

    function calcularTotales() {
        const filas = document.querySelectorAll("#detalleBody tr");
        let total = 0;
        filas.forEach(row => {
            const cantidad = parseFloat(row.querySelector('[name$=".Cantidad"]').value) || 0;
            const precio = parseFloat(row.querySelector('[name$=".PrecioUnitario"]').value) || 0;
            const subtotal = cantidad * precio;
            row.querySelector('[name$=".Subtotal"]').value = subtotal.toFixed(2);
            total += subtotal;
        });
        document.getElementById("totalGeneral").value = total.toFixed(2);
    }
</script>

