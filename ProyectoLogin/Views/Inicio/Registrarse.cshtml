@model ProyectoLogin.Models.Usuario
@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar Usuario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>


    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                        Registrar Usuario
                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="NombreUsuario" class="form-label">Nombre Completo</label>
                                <input class="form-control" type="text" asp-for="NombreUsuario"
                                       placeholder="Ejemplo: Juan Pérez" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Correo" class="form-label">Correo electrónico</label>
                                <input class="form-control" type="email" asp-for="Correo"
                                       placeholder="usuario@correo.com" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Clave" class="form-label">Contraseña</label>
                                <input class="form-control" type="password" asp-for="Clave"
                                       placeholder="Mínimo 6 caracteres" required />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="IdRol" class="form-label">Rol</label>
                                <select class="form-control" asp-for="IdRol">
                                    <option value="1">Administrador</option>
                                    <option value="2">Gerente</option>
                                    <option value="3">Vendedor</option>
                                </select>
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Guardar</button>
                            </div>

                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>