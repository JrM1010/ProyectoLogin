@{
    var producto = ViewBag.Producto as ProyectoLogin.Models.ModelosProducts.ProductoCore;
    ViewData["Title"] = "Ajuste de Inventario";
}

<h2>Ajuste de Inventario - @producto?.Nombre</h2>

<form asp-action="Ajuste" asp-route-id="@producto?.IdProducto" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Tipo de movimiento</label>
        <select name="tipoMovimiento" class="form-control">
            <option value="Entrada">Entrada</option>
            <option value="Salida">Salida</option>
        </select>
    </div>

    <div class="form-group">
        <label>Cantidad</label>
        <input type="number" name="cantidad" class="form-control" min="1" step="1" required />
    </div>

    <div class="form-group mt-3">
        <label>Observación</label>
        <textarea name="observacion" class="form-control"></textarea>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">💾 Guardar ajuste</button>
    <a asp-action="Movimientos" asp-route-id="@producto?.IdProducto" class="btn btn-secondary">Cancelar</a>
</form>
