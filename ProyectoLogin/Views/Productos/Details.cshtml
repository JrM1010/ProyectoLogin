@model ProyectoLogin.Models.ModelosProducts.ProductoCore

<h2>Detalles del Producto</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Descripcion</dd>

    <dt class="col-sm-3">Código de Barras</dt>
    <dd class="col-sm-9">@Model.CodigoBarras</dd>

    <dt class="col-sm-3">Categoría</dt>
    <dd class="col-sm-9">@Model.Categoria?.Nombre</dd>

    <dt class="col-sm-3">Marca</dt>
    <dd class="col-sm-9">@Model.Marca?.Nombre</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Volver</a>