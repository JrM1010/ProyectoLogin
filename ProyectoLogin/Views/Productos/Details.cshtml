@model ProyectoLogin.Models.ModelosProducts.ProductoCore
@{
    ViewData["Title"] = "Detalles del Producto";
    var inventario = ViewBag.Inventario as ProyectoLogin.Models.ModelosProducts.Inventario;
    var precios = ViewBag.Precios as IEnumerable<ProyectoLogin.Models.ModelosProducts.ProductoPrecio>;
    var movimientos = ViewBag.Movimientos as IEnumerable<ProyectoLogin.Models.ModelosProducts.MovInventario>;
}

<h2>Detalles: @Model.Nombre</h2>

<div class="row mb-4">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre</dd>

            <dt class="col-sm-4">Código de barras</dt>
            <dd class="col-sm-8">@Model.CodigoBarras</dd>

            <dt class="col-sm-4">Categoría</dt>
            <dd class="col-sm-8">@Model.Categoria?.Nombre</dd>

            <dt class="col-sm-4">Marca</dt>
            <dd class="col-sm-8">@Model.Marca?.Nombre</dd>

            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>

            <dt class="col-sm-4">Activo</dt>
            <dd class="col-sm-8">@(Model.Activo ? "Sí" : "No")</dd>
        </dl>

        <p>
            <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="btn btn-warning">Editar datos</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </p>
    </div>

    <div class="col-md-6">
        <h5>Inventario</h5>
        <div class="mb-2">
            <strong>Stock actual:</strong> <span class="h4">@(inventario?.StockActual ?? 0)</span>
        </div>
        <div class="mb-2">
            <strong>Stock mínimo:</strong> @(inventario?.StockMinimo ?? 0)
        </div>

        
    </div>
</div>

<hr />

<h4>Precios históricos</h4>
@if (precios != null && precios.Any())
{
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Precio Compra</th>
                <th>Precio Venta</th>
                <th>Fecha inicio</th>
                <th>Activo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in precios)
            {
                <tr>
                    <td>@p.PrecioCompra.ToString("N2")</td>
                    <td>@p.PrecioVenta.ToString("N2")</td>
                    <td>@p.FechaInicio.ToString("g")</td>
                    <td>@(p.Activo ? "Sí" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No hay precios registrados.</p>
}

<hr />

<h4>Movimientos recientes (inventario)</h4>
@if (movimientos != null && movimientos.Any())
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Cantidad</th>
                <th>Referencia</th>
                <th>Observación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in movimientos)
            {
                <tr>
                    <td>@m.Fecha.ToString("g")</td>
                    <td>@m.TipoMovimiento</td>
                    <td>@m.Cantidad</td>
                    <td>@m.Referencia</td>
                    <td>@m.Observacion</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No se han registrado movimientos recientes.</p>
}