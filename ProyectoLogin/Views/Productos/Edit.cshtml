@model ProyectoLogin.Models.ModelosProducts.ProductoCore

@{
    ViewData["Title"] = "Editar Producto";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Edit" asp-route-id="@Model.IdProducto" method="post">
    @Html.AntiForgeryToken()

   
    <input type="hidden" asp-for="IdProducto" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="CodigoBarras"></label>
        <input asp-for="CodigoBarras" class="form-control" />
    </div>

    <div class="form-group">
        <label>Categoría</label>
        <select asp-for="IdCategoria"
                class="form-control"
                asp-items="@(new SelectList(ViewBag.Categorias, "IdCategoria", "Nombre", Model.IdCategoria))">
        </select>
    </div>

    <div class="form-group">
        <label>Marca</label>
        <select asp-for="IdMarca"
                class="form-control"
                asp-items="@(new SelectList(ViewBag.Marcas, "IdMarca", "Nombre", Model.IdMarca))">
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">💾 Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
