@model ProyectoLogin.Models.ModelosProducts.ProductoCore

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Producto</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdProducto" />

                <!-- DATOS BÁSICOS -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Nombre del producto</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej. Detergente líquido" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Código de barras</label>
                        <input asp-for="CodigoBarras" class="form-control" placeholder="Ej. 1234567890" />
                        <span asp-validation-for="CodigoBarras" class="text-danger"></span>
                    </div>
                </div>

                <!-- DETALLES -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describe brevemente el producto..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <!-- CATEGORÍA Y MARCA -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Categoría</label>
                        <select asp-for="IdCategoria" class="form-select"
                                asp-items="@(new SelectList(ViewBag.Categorias, "IdCategoria", "Nombre"))">
                            <option value="">Seleccione una categoría</option>
                        </select>
                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Marca</label>
                        <select asp-for="IdMarca" class="form-select"
                                asp-items="@(new SelectList(ViewBag.Marcas, "IdMarca", "Nombre"))">
                            <option value="">Seleccione una marca</option>
                        </select>
                        <span asp-validation-for="IdMarca" class="text-danger"></span>
                    </div>
                </div>

                <!-- ESTADO -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="form-check form-switch mt-4">
                            <input class="form-check-input" asp-for="Activo" />
                            <label class="form-check-label fw-bold">Producto activo</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al listado
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
