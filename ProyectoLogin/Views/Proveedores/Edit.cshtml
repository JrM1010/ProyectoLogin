@model ProyectoLogin.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<h2>Editar Proveedor</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdProveedor" />

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label">Nombre *</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Contacto" class="form-label">Contacto</label>
        <input asp-for="Contacto" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Telefono" class="form-label">Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Direccion" class="form-label">Dirección</label>
        <input asp-for="Direccion" class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
