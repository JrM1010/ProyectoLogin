@{
    ViewData["Title"] = "Punto de Venta";
}
@Html.AntiForgeryToken()

<div class="container mt-3">
    <h3>Punto de Venta</h3>

    <div class="mb-3">
        <input id="searchInput" class="form-control" placeholder="Buscar producto por nombre o código..." />
        <div id="searchResults" class="list-group mt-2"></div>
    </div>

    <form id="saleForm" method="post" asp-action="Create">
        @Html.AntiForgeryToken()
        <input type="hidden" name="IdUsuario" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />

        <table class="table" id="saleTable">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio unit.</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <div class="d-flex justify-content-end">
            <div class="me-3">Subtotal: <span id="subtotalText">0.00</span></div>
            <div class="me-3">IVA: <span id="ivaText">0.00</span></div>
            <div>Total: <strong id="totalText">0.00</strong></div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Registrar Venta</button>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/pos.js"></script>
