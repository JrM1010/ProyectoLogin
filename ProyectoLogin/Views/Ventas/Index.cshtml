@{
    ViewData["Title"] = "Punto de Venta";
}

<div class="row">
    <!-- Panel Izquierdo: Productos y tabla -->
    <div class="col-md-8">
        <input type="text" id="busqueda" class="form-control mb-2" placeholder="Buscar producto por nombre o código..." />

        <table class="table table-striped" id="tablaVenta">
            <thead>
                <tr>
                    <th>Cant.</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Desc.%</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <button id="btnAgregarCliente" class="btn btn-outline-primary">Agregar Cliente</button>
        <button id="btnDescuento" class="btn btn-outline-warning">Descuento</button>
        <button id="btnCancelar" class="btn btn-outline-danger">Cancelar Venta</button>
    </div>

    <!-- Panel Derecho: Resumen -->
    <div class="col-md-4">
        <div class="card p-3 shadow">
            <h5>Ticket <span id="numTicket">#001</span></h5>
            <hr />
            <p>Artículos: <span id="totalArticulos">0</span></p>
            <p>Subtotal: <span id="subtotal">$0.00</span></p>
            <p>IVA (12%): <span id="iva">$0.00</span></p>
            <h4>Total: <span id="total">$0.00</span></h4>

            <hr />
            <button class="btn btn-success w-100 mb-2" id="btnEfectivo">Efectivo</button>
            <button class="btn btn-info w-100 mb-2" id="btnTarjeta">Tarjeta</button>
            <button class="btn btn-secondary w-100 mb-2" id="btnMixto">Mixto</button>
            <button class="btn btn-primary w-100" id="btnCobrar">COBRAR</button>
        </div>
    </div>
</div>
