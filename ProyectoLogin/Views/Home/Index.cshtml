@model IEnumerable<ProyectoLogin.Models.Producto>
@{
    ViewData["Title"] = "Home Page";

    // Debug: Verificar todos los valores
    var nombreUsuario = ViewData["nombreUsuario"] as string;
    var user = Context.User;
    var isAuthenticated = user?.Identity?.IsAuthenticated ?? false;
    var userName = user?.Identity?.Name;
    var claimsCount = user?.Claims.Count() ?? 0;
}

<div class="text-center">
    <!-- Solución temporal segura -->
    <h1 class="display-4">
        @if (!string.IsNullOrEmpty(nombreUsuario))
        {
            @:Bienvenido @nombreUsuario
        }
        else if (!string.IsNullOrEmpty(userName))
        {
            @:Bienvenido @userName
        }
        else
        {
            @:Bienvenido Usuario
        }
    </h1>

    <p>Exitos en sus Labores</p>
</div>

<!-- SECCIÓN DE DEBUG - ELIMINAR DESPUÉS -->
@if (isAuthenticated)
{
    <div class="alert alert-info mt-4">
        <h5>Información de Debug:</h5>
        <p><strong>Autenticado:</strong> @isAuthenticated</p>
        <p><strong>Nombre de usuario ViewData:</strong> @(nombreUsuario ?? "NULL")</p>
        <p><strong>Nombre de usuario Identity:</strong> @(userName ?? "NULL")</p>
        <p><strong>Número de Claims:</strong> @claimsCount</p>

        @if (user != null)
        {
            <h6>Claims del usuario:</h6>
            <ul class="list-unstyled">
                @foreach (var claim in user.Claims)
                {
                    <li><small>@claim.Type: @claim.Value</small></li>
                }
            </ul>
        }
    </div>
}




<div class="container">
    <h2>Inventario de Productos</h2>

    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Index" method="get" class="form-inline">
                        <input type="text" name="searchString" class="form-control mr-2" placeholder="Buscar producto..." value="@ViewBag.SearchString" />
                        <select name="categoriaId" class="form-control mr-2" asp-items="ViewBag.Categorias">
                            <option value="">Todas las categorías</option>
                        </select>
                        <select name="marcaId" class="form-control mr-2" asp-items="ViewBag.Marcas">
                            <option value="">Todas las marcas</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </form>
                </div>
                <div class="col-md-6 text-right">
                    <a asp-controller="Productos" asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nuevo Producto
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Categoría</th>
                    <th>Marca</th>
                    <th>Precio Venta</th>
                    <th>Stock</th>
                    <th>Stock Mínimo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.Stock <= item.StockMinimo ? "table-danger" : "")">
                        <td>@item.CodigoBarras</td>
                        <td>@item.Nombre</td>
                        <td>@item.Categoria?.Nombre</td>
                        <td>@item.Marca?.Nombre</td>
                        <td>@item.PrecioVenta.ToString("C")</td>
                        <td>
                            <span class="@(item.Stock <= item.StockMinimo ? "text-danger font-weight-bold" : "")">
                                @item.Stock
                            </span>
                        </td>
                        <td>@item.StockMinimo</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Detalles" asp-route-id="@item.IdProducto" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="Productos" asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Productos" asp-action="AjustarStock" asp-route-id="@item.IdProducto" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-boxes"></i>
                                </a>
                                <a asp-controller="Productos" asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>