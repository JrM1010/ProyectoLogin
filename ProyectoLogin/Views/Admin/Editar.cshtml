@model ProyectoLogin.Models.Usuario

<h2>Editar Rol de Usuario</h2>

<form asp-action="Editar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdUsuario" />

    <div class="form-group">
        <label>Nombre de usuario</label>
        <input asp-for="NombreUsuario" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Rol</label>
        <select class="form-control" asp-for="IdRol"
                asp-items="@(new SelectList(ViewBag.Roles, "IdRol", "NombreRol", Model.IdRol))">
        </select>
    </div>

    <br/>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Usuarios" class="btn btn-secondary">Cancelar</a>
</form>


